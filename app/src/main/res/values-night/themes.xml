<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EnGames" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CardStyle" parent="Theme.EnGames">
        <item name="android:background">@drawable/edit_text_background_dark</item>
    </style>

    <style name="EditTextStyle" parent="CardStyle">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:maxLength">24</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MainButton" parent="Theme.EnGames">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="IconsStyle" parent="Theme.EnGames">
        <item name="tint">@color/alternativeMain</item>
    </style>

    <style name="LogoutStyle" parent="Theme.EnGames">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">@drawable/logout_background_dark</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="ToggleCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@drawable/toggle_button_background_dark</item>
    </style>
    <style name="ToggleCard.Text" parent="Theme.EnGames">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="CardView.Invert" parent="Theme.EnGames">
        <item name="cardCornerRadius">16dp</item>
        <item name="elevation">6dp</item>
        <item name="cardBackgroundColor">@color/alternativeMain</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="CardView.Invert.Title" parent="SubTitleText">
        <item name="android:textColor">@color/alternativeSecond</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>