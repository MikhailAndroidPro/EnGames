        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="EditTextStyle" parent="Theme.EnGames">
        <item name="android:background">@drawable/edit_text_background_dark</item>
        <item name="android:paddingHorizontal">12dp</item>
