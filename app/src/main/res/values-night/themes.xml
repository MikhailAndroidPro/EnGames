<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EnGames" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/bgShapeColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RecyclerBase" parent="Theme.EnGames">
        <item name="android:fadingEdgeLength">32dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>

    <style name="TitleText" parent="Theme.EnGames">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="Theme.EnGames">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>