<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EnGames" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/alternativeBgShape</item>
        <item name="android:textColor">@color/alternativeSecond</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.EnGames" parent="Base.Theme.EnGames" />

    <style name="RecyclerBase" parent="Theme.EnGames">
        <item name="android:fadingEdgeLength">32dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>

    <style name="TitleText" parent="Theme.EnGames">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="Theme.EnGames">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>