<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.EnGames" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/secondaryColor</item>
        <item name="android:textColor">@color/alternativeSecond</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.EnGames" parent="Base.Theme.EnGames" />

    <style name="CardStyle" parent="Theme.EnGames">
        <item name="android:background">@drawable/edit_text_background_light</item>
    </style>

    <style name="EditTextStyle" parent="CardStyle">
        <item name="android:textColorHint">@color/alternativeHint</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:maxLength">24</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RecyclerBase" parent="Theme.EnGames">
        <item name="android:fadingEdgeLength">32dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>

    <style name="TitleText" parent="Theme.EnGames">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleText" parent="Theme.EnGames">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConstLightText" parent="SubTitleText">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="CheckBoxStyle" parent="SubTitleText">
        <item name="android:buttonTint">@color/red</item>
        <item name="android:buttonCornerRadius">4dp</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.EnGames">
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="BottomNavStyle" parent="Theme.EnGames">
        <item name="android:background">@color/red</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationView.ActiveIndicator</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="MainButton" parent="Theme.EnGames">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/alternativeMain</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="IconsStyle" parent="Theme.EnGames">
        <item name="tint">@color/mainColor</item>
    </style>

    <style name="BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondaryColor</item>
    </style>

    <style name="LogoutStyle" parent="Theme.EnGames">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">@drawable/logout_background_light</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>